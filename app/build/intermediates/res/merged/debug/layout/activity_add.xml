<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.alfonso.serverdrupal.activity_add">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nombre"
        android:id="@+id/tvN"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etN"
        android:layout_below="@+id/tvN"
        android:layout_alignLeft="@+id/tvN"
        android:layout_alignParentRight="true"
        android:background="#fff9d4"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Apellido"
        android:id="@+id/tvA"
        android:layout_below="@+id/etN"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etA"
        android:layout_below="@+id/tvA"
        android:layout_alignLeft="@+id/tvA"
        android:layout_alignParentRight="true"
        android:background="#fff9d4"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nombre"
        android:id="@+id/tvNu"
        android:layout_below="@+id/etA"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etNu"
        android:layout_below="@+id/tvNu"
        android:layout_alignLeft="@+id/tvNu"
        android:layout_alignParentRight="true"
        android:background="#fff9d4"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Latitud-Longitud"
        android:id="@+id/tvll"
        android:layout_below="@+id/etNu"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etll"
        android:layout_below="@+id/tvll"
        android:layout_alignLeft="@+id/tvNu"
        android:layout_alignParentRight="true"
        android:background="#fff9d4"/>

    <Button
        android:id="@+id/bCll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etll"
        android:layout_marginTop="5dp"
        android:text="geoPosition" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/buttonSave"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/bCll"/>

</RelativeLayout>
